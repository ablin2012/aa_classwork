<% if type == :new %>
    <% action_url = cats_url %>
    <% button_text = 'Create Cat' %>
<% else %>
    <% action_url = cat_url(cat) %>
    <% button_text = 'Update Cat' %>
<% end %>

<form action='<%= action_url %> ' method='post'>
    <% if type == :edit %>
        <input type="hidden" name="_method" value="patch">
    <% end %>
    <label for='name'>Name:
        <input type='text' name='cat[name]' id='name' value='<%= cat.name%>'>
    </label>
    <br>
    <label for='birth_date'>Name:
        <input type='date' name='cat[birth_date]' id='birth_date' value='<%= cat.birth_date%>'>
    </label>
    <br>
    <label for='color'>Color:
       <select id='color' name='cat[color]'>
            <option disabled <%= cat.color ? "" : "selected" %> >-- Please Select --</option>
            <option value = "green" <%= cat.color == "green" ? "selected" : ""%>>Green</option>
            <option value = "purple" <%= cat.color == "purple" ? "selected" : ""%>>Purple</option>
            <option value = "yellow" <%= cat.color == "yellow" ? "selected" : ""%>>Yellow</option>
            <option value = "red" <%= cat.color == "red" ? "selected" : ""%>>Red</option>
        </select>
    </label>
    <br>
    <label for='sex'>Sex:
        <select id='sex' name='cat[sex]'>
            <option disabled <%= cat.color ? "" : "selected" %> >-- Please Select --</option>
            <option value = "M" <%= cat.sex == "M" ? "selected" : ""%>>Male</option>
            <option value = "F" <%= cat.sex == "F" ? "selected" : ""%>>Female</option>
        </select>
    </label>
    <br><br>
    <label for='description'>Description:
        <textarea name='cat[description]'>
            <%= cat.description %>
        </textarea>
    </label>
<br>
    <input type='submit' value='<%= button_text%>'>

</form>

 

