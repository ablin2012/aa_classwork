<table>
    <thead>
        <tr>
            <th colspan="2"><%= cat.name %></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Color:</td>
            <td><%= cat.color %></td>
        </tr>
        <tr>
            <td>Sex:</td>
            <td><%= cat.sex %></td>
        </tr>
        <tr>
            <td>Birthday:</td>
            <td><%= cat.birth_date %></td>
        </tr>
        <tr>
            <td>Description:</td>
            <td><%= cat.description %></td>
        </tr>
    </tbody>
</table>
<% if action == :show %>
    <a href="<%= cats_url %>">Cat Index</a>
<%else%>
    <a href="<%= cat_url(cat) %>"><%= cat.name %>'s Show Page </a>
<%end%>
<br>
<a href='<%= edit_cat_url(cat) %>'> Update <%= cat.name %> </a>
<br>
<form action='<%= cat_url(cat) %>' method='post'>
    <input type='hidden' name='_method' value='delete'>
    <input type='submit' value='Delete <%= cat.name %>'>
</form>
<br><br>
